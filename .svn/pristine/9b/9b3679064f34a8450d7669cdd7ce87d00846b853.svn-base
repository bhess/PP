package clonedetection.classification;

import clonedetection.results.Results;

/**
 * 
 * @author bhess
 * 
 * Interface to classify given traces ('Results')
 * as genuine or clone.
 * 
 * Different methods can be implemented as subclases.
 *
 */
public interface CloneClassification extends Cloneable {
	
	public static int EQUALS = 0;
	public static int LESS_OR_EQUAL = 1;
	public static int LESS = 2;
	public static int GREATER_OR_EQUAL = 3;
	public static int GREATER = 4;
	
	/*
	 * Name of the current Classifier
	 */
	public String getName();
	
	/*
	 * determines the threshold limit at which the tag is
	 * classified as clone or counterfeit, respectively
	 */
	public double isClone(float pmr, Results results);
	
	/*
	 * Classifies a tag with a given value from 'isClone(pmr,results)'
	 * as clone or not, using a specifyed threshold
	 */
	public boolean isClone(double threshold, double isClone);
	
	/*
	 * returns the minimal threshold limit of all recorded
	 * ones
	 */
	public double getMinThreshold();
	
	/*
	 * returns the maximal threshold limit of all recorded
	 * ones
	 */
	public double getMaxThreshold();
	
	/*
	 * specifies when the tag is considered as counterfeit:
	 * (actual value 'op' isClone(...)
	 * 
	 * op...
	 * 0: =
	 * 1: <=
	 * 2: <
	 * 3: >=
	 * 4: >
	 */
	public int getMode();

}
