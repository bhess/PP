package simulation.utilities;


import java.util.Calendar;
import java.util.Random;

/**
 * @author bhess
 * 
 * Some additional mathematical functions
 */
public class MathTools {

	/**
	 * returns a normal distributed variable in N~(mean,std^2)
	 * result >= 0
	 */
	synchronized public static double nextGaussian(double mean, double std, Random rand) {
		double res = std * rand.nextGaussian() + mean;
		return res;
	}
	
	/*
	 * returns a normal distributed variable in N~(mean,std^2)
	 * result >= 0
	 */
	synchronized public static double nextGaussian(double mean, double std) {
		if (r == null) {
			r = new Random(Calendar.getInstance().getTimeInMillis());
		}
		return nextGaussian(mean, std, r);
	}
	
	private static Random r = null;

}
