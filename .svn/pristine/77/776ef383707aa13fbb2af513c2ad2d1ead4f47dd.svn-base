package simulation;

import simulation.entities.DirectedChannel;
import simulation.entities.Distributor;

/**
 * 
 * @author bhess
 * 
 * Class representing an OUT-EVENT
 *
 */
public class OUTEvent extends ReadEvent {
	
	private static final long serialVersionUID = -3897024402578596646L;
	
	public static final String OUTEVENT = "OUT";

	/**
	 * Initializing with the recording entity and the channel where
	 * a tag is shipped
	 * @param source
	 * Source partner where event is recorded
	 * @param d
	 * Channel where the tag will be shipped on
	 */
	public OUTEvent(Distributor source, DirectedChannel d) {
		super(source, d);
	}

	/* (non-Javadoc)
	 * @see simulation.ReadEvent#setEavesdropped()
	 */
	@Override
	protected void setEavesdropped() {
		eavesdropped = (readChannel.source.random.nextFloat()
				< readChannel.eavesSource ? true : false);
		//eavesdropped |= p.isClone;
	}

	/* (non-Javadoc)
	 * @see simulation.ReadEvent#getEventType()
	 */
	@Override
	public String getEventType() {
		// TODO Auto-generated method stub
		return OUTEVENT;
	}

	/* (non-Javadoc)
	 * @see simulation.ReadEvent#getEavesdroppedOffset()
	 */
	@Override
	public long getEavesdroppedOffset() {
		// TODO Auto-generated method stub
		return readChannel.eavesSourceOffset;
	}
}
